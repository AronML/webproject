@using TutorialAspNetIdentity.Web.Models
@using TutorialAspNetIdentity.Web.Models.Identity
@model TutorialAspNetIdentity.Web.Models.Identity.UpdateUserInfoViewModels
@{
    ViewBag.Title = "DOHQA";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div class="row"></div>
    <div class="col-md-4"></div>
    <div class="col-md-8">
        <h2>Informações do usuário</h2>

        @Html.Partial("_DataUserInfo")

        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Atualizar
        </button>
        <div class="collapse" id="collapseExample">
            @using (Html.BeginForm("UpdateUserInfo", "UserInfo", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Nome" })
                        (Ex: Bruce Wayne)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cpf, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control", @placeholder = "___.___.___-__" })
                        (Ex: 123.456.789-00)
                    </div>


                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Nascimento, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Nascimento, new { @class = "form-control", @placeholder = "__/__/__" })
                        (Ex:DD/MM/AAAA)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Endereco, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control", @placeholder = "Endereço" })
                        (Ex: Rua do Afeneiros, 4)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cep, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Cep, new { @class = "form-control", @placeholder = "__.___-___" })
                        (Ex:10.000-000)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cidade, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @placeholder = "Cidade" })
                        (Ex: Londrina)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Estado, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Estado, new { @class = "form-control", @placeholder = "Estado" })
                        (Ex: Paraná)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Profissao, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Profissao, new { @class = "form-control", @placeholder = "Profissão" })
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="Salvar Informações" /> <a class="btn btn-default" href="~/MyHouse/Index">Cancelar</a>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
<br />
<br />
<br />

    
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
